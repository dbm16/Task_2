<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OnBoarding.SignUp_Fragment"
    android:id="@+id/main"
    android:background="@drawable/spll"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:lineHeight="45dp"
            android:layout_margin="15dp"
            android:text=" ברוכים הבאים"
            android:textColor="#fff"
            android:textSize="25sp"
            android:fontFamily="@font/bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="הצטרפו אלינו וקבלו את כל המידע על המוצרים שלנו!"
            android:textColor="#fff"
            android:textSize="14sp"
            android:fontFamily="@font/reg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/container_card"
        android:orientation="vertical">


        <EditText
            android:id="@+id/usernametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/text"
            android:gravity="center_vertical|right"
            android:paddingRight="25dp"
            android:textSize="13sp"
            android:hint="שם/כינוי"
            android:textColor="#8592A6"
            android:fontFamily="@font/reg"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/text"
            android:gravity="center_vertical|right"
            android:paddingRight="25dp"
            android:textSize="13sp"
            android:hint="מס' טלפון"
            android:textColor="#8592A6"
            android:fontFamily="@font/reg"
            android:inputType="phone" />


        <Button
            android:id="@+id/create_account"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="65dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/card"
            android:text="יצירת חשבון"
            android:textColor="#fff"
            android:textSize="20sp"
            android:fontFamily="@font/med" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </LinearLayout>

</LinearLayout>
